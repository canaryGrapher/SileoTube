{
  "manifest_version": 3,
  "name": "SileoTube",
  "version": "1.1.0",
  "description": "A calming, decluttered YouTube experience.",
  "permissions": ["tabs", "storage"],
  "background": {
    "service_worker": "scripts/background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["*://*.youtube.com/*"],
      "js": [
        "scripts/home-page.js",
        "scripts/shorts-page.js",
        "scripts/watch-page.js",
        "scripts/shorts-recommendations-removal.js",
        "scripts/watch-comments.js",
        "scripts/sidebar-removal.js"
      ],
      "run_at": "document_idle"
    }
  ],
  "host_permissions": ["*://*.youtube.com/*"],
  "icons": {
    "16": "/icon/icon-16.png",
    "32": "/icon/icon-32.png",
    "48": "/icon/icon-48.png",
    "128": "/icon/icon-128.png"
  },
  "action": {
    "default_popup": "index.html",
    "default_title": "SileoTube"
  }
}